<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.ws.model.dao.CarDao">

	<!-- 전체 자동차 조회 -->
	<select id="list" resultType="Car">
		select *
		from car
	</select>

	<!-- vin에 따른 자동차 상세 조회 -->
	<select id="search" parameterType="string" resultType="Car">
		SELECT *
		FROM car WHERE vin = #{vin}
	</select>

	<!-- 자동차 정보 등록 -->
	<insert id="create" parameterType="Car">
		INSERT INTO car (vin, modelname, color, mileage)
		VALUES (#{vin}, #{modelName}, #{color}, #{mileage})
	</insert>

</mapper>

