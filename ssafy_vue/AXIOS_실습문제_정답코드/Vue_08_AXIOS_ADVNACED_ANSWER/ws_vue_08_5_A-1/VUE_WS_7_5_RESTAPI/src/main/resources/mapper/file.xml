<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.ws.model.mapper.FileDao">

	<insert id="insertFile" parameterType="map">
		INSERT INTO file
			(originfile, savefolder, savefile, article_id)
		VALUES
			(#{originFile}, #{saveFolder}, #{saveFile}, #{articleId})
		<selectKey keyProperty="id" resultType="int">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>
	
	<select id="getFile" parameterType="int" resultMap="fileMap">
		SELECT * FROM file
		WHERE id=#{fileId}
			
	</select>
	
	<select id="getFiles" parameterType="int" resultMap="fileMap">
		SELECT * FROM file
		WHERE article_id=#{articleId}
	</select>

	<resultMap type="map" id="fileMap">
		<result property="fileId" column="id" />
		<result property="originFile" column="originfile" />
		<result property="saveFolder" column="savefolder" />
		<result property="saveFile" column="savefile" />
		<result property="articleId" column="article_id" />
	</resultMap>
</mapper>